<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InglesActivity3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="FELICIDADES POR TERMINAR EL JUEGO"
            android:textAlignment="center"
            tools:ignore="MissingConstraints" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="Tu puntuaciÃ³n fue: "
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F8F6F6"
            android:orientation="vertical"
            android:paddingHorizontal="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CBF9FF"
                android:backgroundTint="#CBF9FF"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#CBF9FF"
                    android:paddingVertical="20dp"
                    android:text="Aciertos: "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/aciertosFinales"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#CBF9FF"
                    android:paddingVertical="20dp"
                    android:paddingRight="70dp"
                    android:text=""
                    android:textSize="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#CBF9FF"
                    android:paddingVertical="20dp"
                    android:text="Fallos: "
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/fallosFinales"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="#CBF9FF"
                    android:paddingVertical="20dp"
                    android:text=""
                    android:textSize="20dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="30dp">

            <Button
                android:id="@+id/botonNuevoJuego"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:text="Reiniciar juego"/>

            <Button
                android:id="@+id/botonVolverElegirAsignatura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:text="Elegir asignatura"/>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>