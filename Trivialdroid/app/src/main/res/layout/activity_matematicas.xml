<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MatematicasActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/explicacion"
            android:gravity="center"
            android:layout_margin="40dp"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Deberás elegir la respuesta correcta de las siguientes operaciones, se generará una nueva cada vez que termines la anterior, tienes tiempo límite, al acabar harán una valoración de cual fue tu porcentaje de acierto sobre las operaciones respondidas. Puedes elegir a tu gusto el tipo de operación que realizarás y el tiempo límite del juego."/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textoOperacion"
                android:textSize="15dp"
                android:text="Operación:"/>

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerOperacion"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:layout_marginHorizontal="40dp">

            <TextView
                android:id="@+id/textoCronometro"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Tiempo:"
                android:textSize="15dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerCronometro"
                android:layout_marginLeft="20dp"/>

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/botonComenzar"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="15dp"
            android:text="Comenzar"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>